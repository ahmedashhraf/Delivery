                </RelativeLayout>
                <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.mrsool.customeview.CustomeTextViewRobotoRegular android:textSize="@dimen/sp_14" android:textColor="#444444" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_25" android:text="@string/lbl_what_don_t_work" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
                        <ProgressBar android:layout_gravity="center" android:id="@+id/pgRateReason" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/dp_15" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/dp_15" android:layout_alignParentEnd="true" style="?android:attr/progressBarStyle"/>
                        <com.mrsool.customeview.CustomeTextViewRobotoMedium android:textSize="@dimen/sp_14" android:textColor="#444444" android:layout_gravity="center" android:id="@+id/tverror" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:text="Error! Please try again"/>
                        <LinearLayout android:orientation="vertical" android:id="@+id/llReasons" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_22"/>
                        <com.mrsool.customeview.CustomeEditTextRobotoRegular android:textSize="@dimen/sp_14" android:textColorHint="#444444" android:ellipsize="end" android:gravity="top" android:id="@+id/edtComment" android:background="@drawable/bg_rating_comment" android:paddingLeft="@dimen/dp_15" android:paddingTop="@dimen/dp_15" android:paddingRight="@dimen/dp_15" android:paddingBottom="@dimen/dp_15" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="@dimen/dp_15" android:hint="@string/hint_write_your_comment" android:maxLines="3" android:minLines="3" android:inputType="none|text|textMultiLine|textUri|textEmailAddress|textEmailSubject|textPassword|textVisiblePassword|textWebEditText|textFilter" android:paddingStart="@dimen/dp_15" android:paddingEnd="@dimen/dp_15" style="@style/CustomEditTextBlack"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <com.mrsool.customeview.CustomeTextViewRobotoMedium android:textSize="@dimen/sp_14" android:textColor="@color/White" android:gravity="center_horizontal" android:layout_gravity="bottom" android:id="@+id/tvSubmit" android:background="@drawable/selector_rating_reason_submit_button" android:paddingTop="@dimen/dp_16" android:paddingBottom="@dimen/dp_16" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_15" android:layout_marginTop="@dimen/dp_5" android:layout_marginRight="@dimen/dp_15" android:layout_marginBottom="@dimen/dp_10" android:text="@string/btn_submit" android:layout_alignParentBottom="true" android:textAllCaps="true" android:layout_marginStart="@dimen/dp_15" android:layout_marginEnd="@dimen/dp_15"/>
    </LinearLayout>
</LinearLayout>
