<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/main_content" android:background="@color/order_place_holder_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:background="@color/pending_order_bg" android:layout_width="match_parent" android:layout_height="@dimen/dp_64">
        <FrameLayout android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/flClose" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/dp_8" android:layout_marginEnd="@dimen/dp_8">
            <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/imgClose" android:background="@drawable/bg_ripple_25" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_close" android:tint="@color/shops_title_text_gray" android:contentDescription="@string/lbl_close"/>
            <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/ivBack" android:background="@drawable/bg_ripple_25" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/btn_back_round_sky_blue" android:contentDescription="@string/lbl_back"/>
        </FrameLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerHorizontal="true" android:layout_marginStart="@dimen/dp_56" android:layout_marginEnd="@dimen/dp_56">
            <com.mrsool.customeview.CustomeTextViewRobotoRegular android:textSize="@dimen/sp_14" android:textColor="@color/text_color_7b" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/txtTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_new_order" android:singleLine="true"/>
            <com.mrsool.customeview.CustomeTextViewRobotoMedium android:textSize="@dimen/sp_16" android:textColor="@color/shops_title_text_gray" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:singleLine="true"/>
        </LinearLayout>
    </FrameLayout>
    <ProgressBar android:layout_gravity="center" android:id="@+id/pgLoadMore" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" style="?android:attr/progressBarStyle"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <com.mrsool.customeview.NonSwipeableViewPager android:id="@+id/vpShopDetail" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        <View android:layout_gravity="top" android:id="@+id/tbTXTBottom" android:background="@drawable/toolbar_dropshadow" android:visibility="visible" android:layout_width="match_parent" android:layout_height="2dp"/>
    </FrameLayout>
    <com.viewpagerindicator.CirclePageIndicator android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/pagerIndicator" android:padding="@dimen/dp_5" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fillColor="@color/sky_blue_color" app:pageColor="@color/gray_lite_1" app:radius="5dp" app:snap="false" app:strokeColor="@android:color/transparent"/>
</LinearLayout>
