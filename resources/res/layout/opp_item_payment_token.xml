<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:layout_gravity="center_horizontal" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/payment_token_image" android:padding="4dp" android:layout_width="80dp" android:layout_height="55dp" android:scaleType="centerInside" android:contentDescription="@string/content_description" style="?attr/checkoutTokenImageViewStyle"/>
        <ProgressBar android:layout_gravity="center_horizontal" android:id="@+id/loading_panel" android:padding="4dp" android:layout_width="80dp" android:layout_height="55dp" android:indeterminate="true"/>
    </RelativeLayout>
    <TextView android:textSize="14sp" android:layout_gravity="center_horizontal" android:id="@+id/payment_token_title" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?attr/checkoutTextViewStyle"/>
</LinearLayout>
