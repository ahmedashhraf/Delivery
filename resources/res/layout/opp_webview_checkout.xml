<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="?attr/windowBackground" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/header_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <include android:id="@+id/header" layout="@layout/opp_layout_actionbar"/>
    </FrameLayout>
    <WebView android:id="@+id/checkout_webview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/header_layout"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="6dp" android:layout_below="@+id/header_layout">
        <ProgressBar android:id="@+id/progress_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:progress="100" android:indeterminate="false" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    </FrameLayout>
</RelativeLayout>
