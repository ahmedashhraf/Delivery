    </FrameLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/preview_side_margin" android:layout_marginRight="@dimen/preview_side_margin" android:layout_marginStart="@dimen/preview_side_margin" android:layout_marginEnd="@dimen/preview_side_margin">
        <com.mrsool.customeview.CustomeTextViewRobotoRegular android:textSize="12sp" android:textColor="@color/dark_gray_2" android:gravity="center" android:layout_gravity="center" android:id="@+id/already_added_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/details_pack_already_added"/>
        <FrameLayout android:layout_gravity="bottom" android:id="@+id/add_to_whatsapp_button" android:background="@drawable/btn_green" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/preview_side_margin">
            <TextView android:layout_gravity="center" android:background="@android:color/transparent" android:focusable="false" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:foreground="@android:color/transparent" android:text="@string/add_to_whatsapp" android:drawableLeft="@drawable/sticker_3rdparty_wa" android:drawablePadding="8dp" android:drawableStart="@drawable/sticker_3rdparty_wa" style="@style/StickerPreviewButtonText"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
