        <ImageView android:id="@+id/tray_image" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="16dp" android:src="@color/colorAccent" android:contentDescription="@string/tray_image_content_description" android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <com.mrsool.customeview.CustomeTextViewRobotoMedium android:textSize="14sp" android:textStyle="bold" android:textColor="@color/Black" android:gravity="center_vertical" android:id="@+id/pack_name" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_marginLeft="@dimen/margin_from_tray_to_name" android:layout_marginStart="@dimen/margin_from_tray_to_name" app:layout_constraintStart_toEndOf="@+id/tray_image" app:layout_constraintTop_toTopOf="0"/>
        <com.mrsool.customeview.CustomeTextViewRobotoRegular android:textSize="13sp" android:textColor="@color/dark_gray_2" android:id="@+id/author" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_from_tray_to_name" android:layout_marginStart="@dimen/margin_from_tray_to_name" app:layout_constraintStart_toEndOf="@+id/tray_image" app:layout_constraintTop_toBottomOf="@+id/pack_name"/>
        <com.mrsool.customeview.CustomeTextViewRobotoRegular android:textSize="13sp" android:textColor="@color/dark_gray_2" android:id="@+id/pack_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_from_tray_to_name" android:layout_marginStart="@dimen/margin_from_tray_to_name" app:layout_constraintStart_toEndOf="@+id/tray_image" app:layout_constraintTop_toBottomOf="@+id/author"/>
